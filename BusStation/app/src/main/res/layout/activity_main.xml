<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingBottom="5dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bus"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rela"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_width="220dp"
        android:layout_height="480dp"
        android:background="@drawable/shape_left_panel"
        tools:ignore="MissingConstraints">
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/loginpanel"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:paddingTop="70dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@drawable/shape_login_panel"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtUsernamelg"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:hint="Username"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <EditText
            android:id="@+id/edtPasswordlg"
            android:drawableRight="@drawable/ic_baseline_remove_red_eye_24"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:drawablePadding="10dp"
            android:layout_height="60dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:visibility="invisible"
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvErrorlg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E57373"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


    <TextView
        android:textSize="20sp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/loginpanel"
        android:text="LOGIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/tv_signup"
        android:gravity="right"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/loginpanel"
        android:text="SIGN UP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btn_Login"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@id/loginpanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/button_login"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:layout_marginLeft="30dp"
            android:text="Don't have account ?"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_signup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="SIGN UP"
            android:textColor="@color/purple_200"
            android:textSize="15sp" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>