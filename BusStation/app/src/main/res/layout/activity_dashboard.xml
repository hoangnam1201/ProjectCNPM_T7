<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:id="@+id/drawer_layout">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"/>

        <RelativeLayout
            android:layout_margin="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/txtChon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose your location"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txtChon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="10">
                    <ImageView
                        android:background="@drawable/viet"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:text=" Việt Nam"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="6"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hcm_location"
                    android:background="@drawable/bg_shape"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:padding="2dp"
                        android:drawablePadding="2dp"
                        android:drawableLeft="@drawable/ic_baseline_location_on_22"
                        android:textColor="@color/white"
                        android:text=" Hồ Chí Minh"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="3"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dn_location"
                    android:background="@drawable/bg_shape"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:padding="2dp"
                        android:drawablePadding="2dp"
                        android:drawableLeft="@drawable/ic_baseline_location_on_22"
                        android:textColor="@color/white"
                        android:text=" Đà Nẵng"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="40dp"
                    android:id="@+id/hn_location"
                    android:background="@drawable/bg_shape"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_weight="3"
                        android:drawableLeft="@drawable/ic_baseline_location_on_22"
                        android:drawablePadding="2dp"
                        android:padding="2dp"
                        android:text=" Hà Nội"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/mapai"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include
            layout="@layout/main_nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>